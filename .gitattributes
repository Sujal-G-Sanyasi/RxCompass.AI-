# Exclude entire data directory from language statistics
data/** linguist-vendored
data/** linguist-generated=true

# Exclude data files from language statistics
*.csv linguist-vendored
*.csv linguist-generated=true
*.log linguist-vendored
*.pkl linguist-vendored
*.pickle linguist-vendored

# Exclude Jupyter notebooks completely
*.ipynb linguist-vendored
*.ipynb linguist-generated=true
notebooks/** linguist-vendored

# Exclude package lock files
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true

# Mark JSON config files as code (but exclude data JSON)
*.json linguist-detectable=false
package.json linguist-detectable=true
tsconfig*.json linguist-detectable=true
components.json linguist-detectable=true

# Generated/distribution files
dist/ linguist-vendored
build/ linguist-vendored
*.min.js linguist-generated=true
*.min.css linguist-generated=true

# Ensure proper language detection
*.py linguist-detectable=true
*.ts linguist-detectable=true
*.tsx linguist-detectable=true
*.js linguist-detectable=true
*.jsx linguist-detectable=true
*.html linguist-detectable=true
*.css linguist-detectable=true

